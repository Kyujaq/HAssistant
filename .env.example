# HAssistant Environment Configuration
# Copy this file to .env and update with your actual values

# ============================================================================
# Home Assistant
# ============================================================================
HA_BASE_URL=http://assistant-ha:8123
HA_TOKEN=your_long_lived_access_token_here

# ============================================================================
# Timezone Configuration
# ============================================================================
TIME_ZONE=America/Toronto

# ============================================================================
# Ollama LLM Configuration
# ============================================================================
OLLAMA_HOST=http://ollama-chat:11434
OLLAMA_VISION_BASE=http://ollama-vision:11434
OLLAMA_VISION_MODEL=qwen2.5vl:7b

# ============================================================================
# PostgreSQL Database (Memory Storage)
# ============================================================================
POSTGRES_PASSWORD=hassistant_secure_password_change_me
POSTGRES_DB=hassistant
POSTGRES_USER=hassistant

# Letta Bridge connection string
LETTA_PG_URI=postgresql://hassistant:hassistant_secure_password_change_me@hassistant-postgres:5432/hassistant

# ============================================================================
# Redis Cache Configuration
# ============================================================================
REDIS_PASSWORD=hassistant_redis_password_change_me
LETTA_REDIS_URL=redis://:hassistant_redis_password_change_me@hassistant-redis:6379/0

# ============================================================================
# Letta Bridge API Configuration
# ============================================================================
BRIDGE_API_KEY=change-me-to-secure-key
PORT=8081
EMBED_DIM=1536
DAILY_BRIEF_WINDOW_HOURS=24

# ============================================================================
# Vision Gateway Configuration
# ============================================================================
# HDMI capture device
HDMI_DEVICE=/dev/video0
HDMI_ENABLED=true
HDMI_FPS=2
HDMI_RESIZE_LONG=1280

# Motion detection settings
MOTION_THRESHOLD=0.015
COOLDOWN_SECONDS=8

# ============================================================================
# Frigate Configuration
# ============================================================================
FRIGATE_RTSP_PASSWORD=password

# ============================================================================
# Security Notes
# ============================================================================
# 1. ALWAYS change default passwords before deploying to production
# 2. Use strong, randomly generated passwords (e.g., pwgen -s 32 1)
# 3. Never commit the actual .env file to version control
# 4. Restrict file permissions: chmod 600 .env
# 5. Use Docker secrets in production environments
